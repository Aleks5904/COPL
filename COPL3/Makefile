CC=g++
RM=rm -f
CXXFLAGS=-std=c++11 -Wall
LDFLAGS=
LDLIBS=

SRCS=main.cpp ast.cpp
OBJS=$(subst .cpp,.o,$(SRCS))
TARGET=CPL3

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CXXFLAGS) $(LDFLAGS) -o $(TARGET) $(OBJS) $(LDLIBS)

main.o: main.cpp ast.h token.h
ast.o: ast.cpp ast.h

clean:
	$(RM) $(OBJS) $(TARGET)

distclean: clean

build: $(TARGET)
	@echo "Finished building $(TARGET)."

run: build
	./$(TARGET) positives.txt
